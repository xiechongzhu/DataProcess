<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataProcess.Controls"
             xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/charts" x:Class="DataProcess.Controls.Curve"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <dxc:ChartControl HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Height="430">
            <dxc:XYDiagram2D PaneOrientation="Vertical" EnableAxisYNavigation="True" >
                <dxc:XYDiagram2D.AxisY>
                    <dxc:AxisY2D>
                        <dxc:AxisY2D.Title>
                            <dxc:AxisTitle Content="经度" Visible="True" FontSize="12" />
                        </dxc:AxisY2D.Title>
                        <dxc:AxisY2D.WholeRange>
                            <dxc:Range MaxValue="0.9"  MinValue="0"/>
                        </dxc:AxisY2D.WholeRange>
                    </dxc:AxisY2D>
                </dxc:XYDiagram2D.AxisY>
            </dxc:XYDiagram2D>
        </dxc:ChartControl>
    </Grid>
</UserControl>
